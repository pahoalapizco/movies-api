{
  "name": "movies-api",
  "version": "1.0.0",
  "description": "A little API for movies",
  "main": "index.js",
  "scripts": {
    "start": "set NODE_ENV=production && node index",
    "start:dev": "set DEBUG=app:* & nodemon index.js",
    "test": "mocha --exit",
    "cover": "nyc npm run test",
    "report": "nyc report --reporter=html && open coverage/index.html"
  },
  "author": "pahoalapizco",
  "license": "MIT",
  "devDependencies": {
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1"
  },
  "dependencies": {
    "@hapi/boom": "^9.0.0",
    "@hapi/joi": "^15.0.3",
    "express": "^4.17.1",
    "mocha": "^7.0.0",
    "mongodb": "^3.4.1",
    "proxyquire": "^2.1.3",
    "sinon": "^8.0.4",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "nyc": {
    "all": true,
    "includes": ["routes", "services", "lib", "utils"]
  }
}
